#include <behaviors.dtsi>
#include <dt-bindings/zmk/keys.h>
#include <dt-bindings/zmk/bt.h>

/ {
behaviors {
        td_mt: tap_dance_mod_tap {
            compatible = "zmk,behavior-tap-dance";
            label = "TAP_DANCE_MOD_TAP";
            #binding-cells = <0>;
            tapping-term-ms = <200>;
            bindings = <&mt LSHIFT CAPSLOCK>, <&kp LCTRL>;
        };
        td_mq: tap_dance_mod_tap {
            compatible = "zmk,behavior-tap-dance";
            label = "Q";
            #binding-cells = <0>;
            tapping-term-ms = <200>;
            bindings = <&mt N1 Q>, <&kp EXCL>;
        };
    };
    keymap {
        compatible = "zmk,keymap";

        default_layer {
            // -----------------------------------------------------------------------------------------
            // |  TAB |  Q  |  W  |  E  |  R  |  T  |   |  Y  |  U   |  I  |  O  |  P  | BKSP |
            // | CTRL |  A  |  S  |  D  |  F  |  G  |   |  H  |  J   |  K  |  L  |  ;  |  '   |
            // | SHFT |  Z  |  X  |  C  |  V  |  B  |   |  N  |  M   |  ,  |  .  |  /  | ESC  |
            //                    | GUI | LWR | SPC |   | ENT | RSE  | ALT |

            bindings = <
         &kp ESCAPE  &td_mq  &kp W      &kp E      &kp R  &kp T   &kp Y    &kp U                 &kp I    &kp O     &kp P  &kp BSPC
              &mo 3  &kp A  &kp S      &kp D      &kp F  &kp G   &kp H    &kp J                 &kp K    &kp L  &kp SEMI   &kp SQT
             &td_mt  &kp Z  &kp X      &kp C      &kp V  &kp B   &kp N    &kp M             &kp COMMA  &kp DOT  &kp FSLH   &kp ESC
                                   &kp LCTRL  &kp SPACE  &mo 1  &tog 2  &kp RET  &mt LMETA LC(LG(UP))
            >;
        };

        lower_layer {
            // -----------------------------------------------------------------------------------------
            // |  TAB |  1  |  2  |  3  |  4  |  5  |   |  6  |  7  |  8  |  9  |  0  | BKSP |
            // | BTCLR| BT1 | BT2 | BT3 | BT4 | BT5 |   | LFT | DWN |  UP | RGT |     |      |
            // | SHFT |     |     |     |     |     |   |     |     |     |     |     |      |
            //                    | GUI |     | SPC |   | ENT |     | ALT |

            bindings = <
   &kp TAB        &kp N1        &kp N2        &kp N3        &kp N4        &kp N5    &kp N6    &kp N7    &kp N8     &kp N9  &kp N0  &kp BSPC
&bt BT_CLR  &bt BT_SEL 0  &bt BT_SEL 1  &bt BT_SEL 2  &bt BT_SEL 3  &bt BT_SEL 4  &kp LEFT  &kp DOWN    &kp UP  &kp RIGHT  &trans    &trans
 &kp LSHFT        &trans        &trans        &trans        &trans        &trans    &trans    &trans    &trans     &trans  &trans    &trans
                                            &kp LGUI        &trans     &kp SPACE   &kp RET    &trans  &kp RALT
            >;
        };

        raise_layer {
            // -----------------------------------------------------------------------------------------
            // |  TAB |  !  |  @  |  #  |  $  |  %  |   |  ^  |  &  |  *  |  (  |  )  | BKSP |
            // | CTRL |     |     |     |     |     |   |  -  |  =  |  [  |  ]  |  \  |  `   |
            // | SHFT |     |     |     |     |     |   |  _  |  +  |  {  |  }  | "|" |  ~   |
            //                    | GUI |     | SPC |   | ENT |     | ALT |

            bindings = <
  &kp ESC  &kp NUMBER_1     &kp N2     &kp N3          &kp N4            &kp N5             &kp N6           &kp N7         &kp N8     &kp N9     &kp N0      &kp BSPC
  &kp TAB     &kp TILDE  &kp POUND  &kp SLASH  &kp LEFT_BRACE  &kp LEFT_BRACKET  &kp RIGHT_BRACKET  &kp RIGHT_BRACE  &kp BACKSLASH  &kp MINUS   &kp PLUS     &kp GRAVE
&kp LSHFT        &trans     &trans     &trans          &trans          &kp EXCL           &kp AMPS         &kp PIPE       &kp LBRC  &kp EQUAL  &kp UNDER  &kp ASTERISK
                                       &trans          &trans            &trans             &tog 2           &trans         &trans
            >;
        };

        symbols {
            bindings = <
        &trans  &kp EXCL    &kp AT   &kp HASH  &kp DOLLAR   &kp PERCENT  &kp CARET  &kp AMPERSAND   &kp ASTERISK  &kp LEFT_PARENTHESIS  &kp RIGHT_PARENTHESIS  &kp BACKSPACE
        &trans   &kp TAB  &kp PLUS  &kp MINUS   &kp SLASH  &kp QUESTION   &kp LEFT       &kp DOWN         &kp UP             &kp RIGHT              &kp GRAVE      &kp TILDE
&kp LEFT_SHIFT    &trans    &trans     &trans      &trans        &trans  &kp EQUAL         &trans  &kp LESS_THAN      &kp GREATER_THAN                 &trans         &trans
                                       &trans      &trans        &trans     &trans         &trans         &trans
            >;
        };
    };
};
